# Lunora Player Environment Configuration
# Copy this file to .env and update with your actual values

# AWS Configuration
AWS_REGION=us-west-2
AWS_PROFILE=default

# Project Configuration
PROJECT_NAME=lunora-player
ENVIRONMENT=dev

# Video Storage
VIDEO_BUCKET_NAME=lunora-player-videos

# MediaLive Configuration
SRT_INPUT_PORT=9998

# Videon Edge Configuration
VIDEON_EDGE_NODE_1=your-edge-node-1.example.com
VIDEON_EDGE_NODE_2=your-edge-node-2.example.com

# Development Server
DEV_SERVER_PORT=8080

# Feature Flags
ENABLE_AI_TRANSLATION=false
ENABLE_WHISPER_INTEGRATION=false
ENABLE_USER_AUTHENTICATION=false
ENABLE_ANALYTICS=true

# CloudWatch Configuration (optional)
ENABLE_CLOUDWATCH_MONITORING=false
CLOUDWATCH_NAMESPACE=LunoraPlayer

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,https://your-domain.com

# Security
ENABLE_HTTPS_ONLY=true
ENABLE_SECURITY_HEADERS=true
